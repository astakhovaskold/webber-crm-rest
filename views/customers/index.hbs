<div class="section">
        <div class="columns">
            <div class="column is-8">
                <h1 class="title">Клиенты</h1>
            </div>
            <div class="column is-4 has-text-right">
                <form action="">
                    <div class="field">
                        <div class="control">
                            <a href="/customers/add" class="button is-primary">
                                Добавить
                                <span class="icon ml-0">
                                  <i class="fas fa-plus"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!--
        <nav class="breadcrumb has-arrow-separator is-centered" aria-label="breadcrumbs">
            <ul>
                <li><a href="#">Главная</a></li>
                <li class="is-active"><a href="#" aria-current="page">Задачи</a></li>
            </ul>
        </nav>;
        -->

        <div class="columns is-centered">
            {{#if customers}}
                {{#each customers}}
                    <div class="column is-3">
                        <div class="card">
                            <div class="card-image">
                                <figure class="image is-4by3">
                                    {{#if img}}
                                        <img src="{{ img }}" alt="Placeholder image">
                                    {{else}}
                                        <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                                    {{/if}}
                                </figure>
                            </div>
                            <div class="card-content">
                                <h2 class="title">{{ name }}</h2>
                                <div class="content">
                                    {{#if city}}
                                    <p>{{ city }}</p>
                                    {{/if}}
                                    <hr>
                                    <div>Работаем с <time datetime="{{ info.date.en }}">{{ info.date.ru }}</time></div>
                                </div>
                            </div>
                            <footer class="card-footer">
                                <a href="/customers/{{ _id }}" class="card-footer-item">Редактировать</a>
                                <a href="/customers/{{ _id }}/delete" class="card-footer-item">Удалить</a>
                            </footer>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <p>Нет клиентов.</p>
            {{/if}}
        </div>
</div>