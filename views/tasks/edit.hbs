<section class="section page-edit">
    <div class="container">

        <h1 class="title center">Редактирование</h1>

        <div class="columns is-centered">
            <div class="column is-6">

                {{#if error}}
                    <p class="help help-big is-danger">{{ error }}</p>
                {{/if}}

                <form method="POST" action="/tasks/edit">
                    <div class="field">
                        <label class="label">Задача</label>
                        <div class="control">
                            <input class="input" type="text" placeholder="Заголовок" name="name" value="{{ task.name }}">
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Описание задачи</label>
                        <div class="control">
                            <textarea class="textarea" placeholder="Lorem ipsum dolor" name="body">{{ task.body }}</textarea>
                        </div>
                    </div>

                    <div class="field-body field-body-not-last">
                        <div class="field">
                            <label class="label">Клиент</label>
                            <div class="control">
                                <div class="select">
                                    <select name="customer">
                                        <option>Клиент</option>
                                        <option>3put</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label">Сайт</label>
                            <div class="control">
                                <div class="select">
                                    <select name="project">
                                        <option>Сайт</option>
                                        <option>demo.com</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="field-body field-body-not-last">
                        <div class="field">
                            <label class="label">Автор задачи</label>
                            <div class="control">
                                <input class="input" type="text" value="{{ roles.author.name.first }} {{ roles.author.name.last }}" readonly>
                                <input type="hidden" name="author" value="{{ roles.author._id }}" required>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label">Разработчик</label>
                            <div class="control">
                                <div class="select">
                                    <select name="developer">
                                        <option value="{{ roles.developer._id }}">{{ roles.developer.name.first }} {{ roles.developer.name.last }}</option>
                                        {{#if users.dev}}
                                            {{#each users.dev}}
                                                <option value="{{ _id }}">{{ name.first }} {{ name.last }}</option>
                                            {{/each}}
                                        {{/if}}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Наблюдатели</label>
                        <div class="control">
                            <div class="select is-multiple">
                                <select name="observers" multiple>
                                    {{#each roles.observers}}
                                        <option value="{{ _id }}" selected>{{ name.first }} {{ name.last }}</option>
                                    {{/each}}
                                    {{#if users}}
                                        {{#each users.obs}}
                                                <option value="{{ _id }}">{{ name.first }} {{ name.last }}</option>
                                        {{/each}}
                                    {{/if}}
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="field-body field-body-not-last">
                        <div class="field">
                            <label class="label">Оценка (ч)</label>
                            <div class="control">
                                <input class="input" type="text" placeholder="" name="estimate" value="{{ task.time.estimate }}">
                            </div>
                        </div>

                        <div class="field">
                            <label class="label">Фактически</label>
                            <div class="control">
                                <input class="input" type="text" placeholder="" name="fact" value="{{ task.time.fact }}">
                            </div>
                        </div>
                    </div>

                    <input type="hidden" name="id" value="{{task.id}}">

                    <div class="field is-grouped">
                        <div class="control">
                            <input type="hidden" name="_csrf" value="{{ csrf }}">
                            <button type="submit" class="button is-link">Сохранить</button>
                        </div>
                        <div class="control">
                            <a class="button is-link is-light" href="/tasks">Отмена</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>